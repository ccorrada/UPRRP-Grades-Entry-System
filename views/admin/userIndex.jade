extends ../layout

block content
  .container
    include ../_flash_stage
    .main-content
      include ../_account_controls
      .row
        .col-md-11
          .table-responsive
            table.table
              each user in users
                tr
                  td
                    a(href='/admin/user/edit/#{user.id}') #{user.email}
                  if user.role === 'admin'
                    td= i18n('labelAdmin')
                  else
                    td= i18n('labelProfessor')
        .col-md-1
          a.btn.btn-default(href='/admin/user/new') +