extends ../layout

block content
  .container
    include ../_flash_stage
    .main-content
      include ../_account_controls
      .row
        form.form-horizontal(method='POST', action='/admin/user/save/#{user.id}', id='edit-user')
          .form-group
            input.form-control(type='text', placeholder= i18n('placeholderEmail'), name='email', value='#{user.email}')
          .form-group
            input.form-control(type='text', placeholder= i18n('placeholderFirstNames'), name='first_names', value='#{user.first_names}')
          .form-group
            input.form-control(type='text', placeholder= i18n('placeholderLastNames'), name='last_names', value='#{user.last_names}')
          .form-group
            input.form-control(type='number', placeholder= i18n('placeholderLastSSN'), name='SSN4', value='#{user.SSN4}')
          .form-group
            select.form-control(form='edit-user', name='role')
              - var roles = ['admin', 'professor'];
              for role in roles
                if role === user.role
                  option(selected='true') #{role}
                else
                  option #{role}
          .form-group
            button.btn.btn-default(type='submit')= i18n('btnUpdateUser')
          input(type='hidden', name='_csrf', value='#{_csrf}')
